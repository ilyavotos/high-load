{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@routes/*": ["./routes/*"],
      "@config/*": ["./config/*"],
      "@models/*": ["./models/*"],
      "@migrations/*": ["./migrations/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@schemas/*": ["./schemas/*"],
      "@services/*": ["./services/*"]
    },
    "typeRoots": ["./global.d.ts", "./node_modules/@types"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
